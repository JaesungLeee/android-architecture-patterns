<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/item_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aaaaaaaaaa" />

    <TextView
        android:id="@+id/item_amount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aaaaaaaaaa" />


    <ImageView
        android:id="@+id/item_delete_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_gray_delete_24"
        app:layout_constraintStart_toStartOf="@+id/item_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/item_name_textView" />

    <ImageView
        android:id="@+id/item_plus_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_gray_add_circle_24"
        app:layout_constraintEnd_toStartOf="@+id/item_minus_imageView"
        app:layout_constraintStart_toStartOf="@+id/item_amount_textView"
        app:layout_constraintTop_toBottomOf="@id/item_amount_textView" />

    <ImageView
        android:id="@+id/item_minus_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_gray_remove_circle_24"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/item_amount_textView"
        app:layout_constraintTop_toBottomOf="@id/item_amount_textView"
        app:layout_constraintStart_toEndOf="@id/item_plus_imageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>